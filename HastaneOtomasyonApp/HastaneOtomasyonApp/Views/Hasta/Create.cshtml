@model HastaneOtomasyonApp.Models.Hasta

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>YENİ HASTA KAYDI</h1>

<h4>Hasta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HastaTamAdı" class="control-label"></label>
                <input asp-for="HastaTamAdı" class="form-control" />
