@model HastaneOtomasyonApp.Models.ÖdemeTipi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>YENİ ÖDEME TİPİ EKLE</h1>

<h4>Ödeme Tipi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ÖdemeTipiAdı" class="control-label"></label>
                <input asp-for="ÖdemeTipiAdı" class="form-control" />
