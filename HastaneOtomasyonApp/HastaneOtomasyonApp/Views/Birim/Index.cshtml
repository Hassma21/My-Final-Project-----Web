@model IEnumerable<HastaneOtomasyonApp.Models.Birim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Birim</h1>

<p>
    <a asp-action="Create">Yeni birim ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BirimAdı)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BirimAdı)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BirimID">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.BirimID">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.BirimID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
